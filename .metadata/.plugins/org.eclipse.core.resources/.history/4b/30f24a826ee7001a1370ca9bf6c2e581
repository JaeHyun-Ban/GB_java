package quiz;

import java.util.Scanner;

public class Quiz34 {
	
	//Quiz16
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("금액을 투입해 주세요> ");
		int money = sc.nextInt();
		System.out.println("남은금액: " + money + "원");
		
		choice:while(true) {
			
			System.out.println("[1]데미소다: 400원, "
							+ "[2]밀키스: 500원, "
							+ "[3]코카콜라: 600원, "
							+ "[4]잔돈받기");
			System.out.print("음료수 선택> ");
			int num = sc.nextInt();
			
			switch (num) {
			
			case 1:
				System.out.println("데미소다를 받았습니다!");
				System.out.println();
				money -= 400;
				break;
			case 2:
				System.out.println("밀키스를 받았습니다!");
				System.out.println();
				money -= 500;
				break;
			case 3:
				System.out.println("코카콜라를 받았습니다!");
				System.out.println();
				money -= 600;
				break;
			case 4:
				System.out.println("남은 금액 " + money + "원 을 반환합니다.");
				System.out.println();
				break;
			default:
				if(money < 0) {
					System.out.println("금액이 부족합니다. 돈을 넣어 주세요!");
					System.out.println();
				}
				break choice;
			}
			System.out.println("남은금액: " + money);
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
	}
}





























