package day05;

public class MultiForEx02 {
	
	//별찍기
	/*
	 *
	 **
	 ***
	 ****
	 *****
	 */
	
	public static void main(String[] args) {
		
		int star = 5;
		
		for(int i = 0; i < star; i++) {
			
			for(int j = 0; j < i+1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("====================================");
		
		/*
		 * *****
		 * ****
		 * ***
		 * **
		 * *
		 */
		int star2 = 5;
		for(int i = star2; i > 0; i-- ) {
			
			for(int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("====================================");
		
		/*
		 *     *
		 *    ***
		 *   *****
		 *  *******
		 * *********
		 */
		int star3 = 5;
		for(int i = star3; i > 0; i--) {		//5줄 출력
			
			for(int j = 0; j < i-1 ; j++) {		//공백 4~0칸 출력
				System.out.print(" ");
			}
			
			for(int k = 0; k < 0+k; k+=2) {	//별 1,3,5,7,9 출력
				System.out.print("*");
			}
			System.out.println();
		}
		
		
		
	}

}









































