package quiz;

import java.util.Scanner;

public class Quiz18 {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int i = 0;
		int sum = 0;
		
		while(i != 1) {
			
			System.out.println("0을 입력하면 종료됩니다!");
			System.out.print("정수 입력> ");
			int num = sc.nextInt();
			if(num == 0) {
				i++;
			}
			sum += num;
			
		}
		System.out.println("-------------------------------");
		System.out.println("입력 받은 정수의 합: " + sum);
		
		
		
		
		
		
		
		
		
	}
	
	
}






































